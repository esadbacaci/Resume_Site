			<div class="row">
				<div class="col-lg-12 d-flex justify-content-center">
					<ul id="portfolio-flters">
						<li data-filter="*" class="filter-active">All</li>
						@foreach (var item in Model.Categories)
						{
							<li data-filter=".filter-@(item.CategoryID)">@item.CategoryName</li>
						}
					</ul>
				</div>
			</div>

			<div class="row portfolio-container">
				@foreach (var item in Model.Projects)
				{
					<div class="col-lg-4 col-md-6 portfolio-item filter-@(item.CategoryID)">
						<div class="portfolio-wrap">
							<img style="width:100%; height:250px; object-fit:cover" src="@item.ProjectImage" class="img-fluid" alt="">
							<div class="portfolio-info">
								<h4>@item.ProjectName</h4>
								<p></p>
								<div class="portfolio-links">
									<a href="@item.ProjectImage" data-gallery="portfolioGallery" class="portfolio-lightbox"><i class="bx bx-plus"></i></a>
									<a href="/Project/ProjectDetails/@item.ProjectID" @* data-gallery="portfolioDetailsGallery" data-glightbox="type: external" class="portfolio-details-lightbox"*@><i class="bx bx-link"></i></a>
								</div>
							</div>
						</div>
					</div>
				}
			</div>

