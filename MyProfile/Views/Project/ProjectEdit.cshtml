@model EntityLayer.Concrete.Project
@{
    ViewData["Title"] = "ProjectEdit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<form method="post" action="/Project/ProjectEdit/@Model.ProjectID" enctype="multipart/form-data">
    <div class="form-group">
        <label for="ProjectName">Proje Adı:</label>
        <input type="text" class="form-control" id="ProjectName" name="ProjectName" value="@Model.ProjectName" />

        <label for="ProjectDescription">Proje Açıklaması:</label>
        <input type="text" class="form-control" id="ProjectDescription" name="ProjectDescription" value="@Model.ProjectDescription" />



         <label for="CategoryID">Proje Kategori:</label>
        <select id="CategoryID" name="CategoryID" class="form-control">
            @foreach (var item in ViewBag.cv)
            {
                            <option value="@item.Value">@item.Text</option>
            }
        </select>

        <label for="ProjectURL">Proje URL:</label>
        <input type="text" class="form-control" id="ProjectURL" name="ProjectURL" value="@Model.ProjectURL" />

        <label for="ProjectImage">Proje Resmi:</label>
        <input type="file" class="form-control-file" id="ProjectImage" name="ProjectImage" accept="image/*">
        <img src="@Model.ProjectImage" />

        <input type="hidden" name="ProjectDate" value="@Model.ProjectDate.ToString()" />

    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>