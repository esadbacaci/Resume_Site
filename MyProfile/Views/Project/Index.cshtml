@using EntityLayer.Concrete
@model List<Project>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<h1>Proje Listesi</h1>
<br />
<div class="table-responsive">
    <table class="table table-hover">
        
        <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>Proje Adı</th>
            <th>Proje Açıklama</th>
            <th>Proje URL</th>
            <th>Proje Görsel</th>

            <th></th>
            <th></th>

        </tr>
        </thead>
        @foreach (var item in Model.OrderByDescending(x=>x.ProjectID))
        {
                <tr>
                    <th>@item.ProjectID</th>
                    <td>@item.ProjectName</td>
                    <td>@item.ProjectDescription</td>
                    <td>@item.ProjectURL</td>
                <td><img src="@item.ProjectImage" alt="Projenin Görseli"></td>


                    <td><a href="/Project/ProjectDelete/@item.ProjectID" id="DeleteBtn" onclick="return confirm('Bu Projeyi Silmek İstediğinize Emin Misiniz ?');" class="btn btn-danger">Sil</a></td>
                <td><a href="/Project/ProjectEdit/@item.ProjectID" class="btn btn-warning"> Düzenle</a></td>

                </tr>
        }
    </table>
</div>
<br />
<br />
<br />
<a href="/Project/ProjectAdd" class="btn btn-info">Yeni Proje Ekle</a>



