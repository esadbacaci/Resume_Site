@using EntityLayer.Concrete
@model List<Project>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h1>Proje Listesi</h1>
<br />
<div class="table-responsive">
    <table class="table table-hover">


        <tr>
            <th>#</th>
            <th>Proje Adı</th>
            <th>Proje Açıklama</th>
            <th>Proje URL</th>
            <th>Proje Görsel</th>

            <th></th>

        </tr>

        @foreach (var item in Model)
        {
                <tr>
                    <th>@item.ProjectID</th>
                    <td>@item.ProjectName</td>
                    <td>@item.ProjectDescription</td>
                    <td>@item.ProjectURL</td>
                    <td>@item.ProjectImage</td>


                    <td><a href="/Project/ProjectDelete/@item.ProjectID" id="DeleteBtn" onclick="return confirm('Bu Projeyi Silmek İstediğinize Emin Misiniz ?');" class="btn btn-danger">Sil</a></td>




                </tr>
        }
    </table>
</div>
<br />
<br />
<br />
<a href="/Project/ProjectAdd" class="btn btn-info">Yeni Proje Ekle</a>



